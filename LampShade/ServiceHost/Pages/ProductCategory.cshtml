@page "{id}"
@using _01_LampshadeQuery.Contracts.ProductCategory
@using ShopManagement.Domain.ProductAgg
@model ServiceHost.Pages.ProductCategory

@{
    ViewData["Title"] = "Product Category";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  breadcrumb wrpapper  =======-->
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <!--=======  breadcrumb content  =======-->
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">@Model.ProductCategoryQueryModel.Name</h2>
                        <h3>@Model.ProductCategoryQueryModel.Description</h3>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="./Index">Home</a></li>
                            <li class="active">@Model.ProductCategoryQueryModel.Name</li>
                        </ul>
                    </div>
                    <!--=======  End of breadcrumb content  =======-->
                </div>
                <!--=======  End of breadcrumb wrpapper  =======-->
            </div>
        </div>
    </div>
</div>
<!--====================  End of breadcrumb area  ====================-->
<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  shop page wrapper  =======-->
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <!--=======  shop page header  =======-->
                                <div class="shop-header">
                                    <div class="shop-header__left">
                                        <div class="shop-header__left__message">
                                            Showing 1 to 9 of 15 (2 Pages)
                                        </div>
                                    </div>

                                    <div class="shop-header__right">

                                        <div class="single-select-block d-inline-block">
                                            <span class="select-title">Show:</span>
                                            <select>
                                                <option value="1">10</option>
                                                <option value="2">20</option>
                                                <option value="3">30</option>
                                                <option value="4">40</option>
                                            </select>
                                        </div>

                                        <div class="single-select-block d-inline-block">
                                            <span class="select-title">Sort By:</span>
                                            <select class="pr-0">
                                                <option value="1">Default</option>
                                                <option value="2">Name (A-Z)</option>
                                                <option value="3">Price (min - max)</option>
                                                <option value="4">Color</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <!--=======  End of shop page header  =======-->
                            </div>

                            <div class="col-lg-12">
                                <!--=======  shop page content  =======-->
                                <div class="shop-page-content">

                                    <div class="row shop-product-wrap grid three-column">
                                        @foreach (var item in @Model.ProductCategoryQueryModel.Products)
                                        { 
                                            <div class="col-12 col-lg-4 col-md-4 col-sm-6">
                                            <!--=======  product grid view  =======-->
                                            <div class="single-grid-product grid-view-product">
                                                <div class="single-grid-product__image">
                                                    @if (item.HasDiscount)
                                                    {
                                                    <div class="single-grid-product__label">
                                                        <span class="sale">-@item.DiscountRate%</span>
                                                        @*<span class="new">New</span>*@
                                                    </div>
                                                    }
                                                    
                                                    <a asp-page="/Product" asp-route-id="@item.Slug">
                                                        <img src="~/ProductPictures/@item.Picture" class="img-fluid"
                                                             alt="@item.PictureAlt" title="@item.PictureTitle">
                                                        
                                                    </a>
                                                    
                                                </div>
                                                <div class="single-grid-product__content">
                                                    <div class="single-grid-product__category-rating">
                                                        <span class="category">
                                                            <a asp-page="/ProductCategory" asp-route-id="@Model.ProductCategoryQueryModel.Slug">@Model.ProductCategoryQueryModel.Name.</a>
                                                        </span>
                                                        <span class="rating">
                                                            <i class="ion-android-star active"></i>
                                                            <i class="ion-android-star active"></i>
                                                            <i class="ion-android-star active"></i>
                                                            <i class="ion-android-star active"></i>
                                                            <i class="ion-android-star-outline"></i>
                                                        </span>
                                                    </div>

                                                    <h3 class="single-grid-product__title">
                                                        <a asp-page="/Product" asp-route-id="@item.Slug">@item.Name</a>
                                                    </h3>
                                                    <p class="single-grid-product__price">
                                                        @if (item.HasDiscount)
                                                        {
                                                    
                                                            <span class="discounted-price">€@item.PriceWithDiscount</span>
                                                            <span class="main-price discounted">€@item.Price</span>
                                                   
                                                        }
                                                        else
                                                        {
                                                            <span class="main-price">€@item.Price</span>
                                                        }
                                                    </p>
                                                    
                                                    @if (item.HasDiscount == true)
                                                    {
                                                        <div class="product-countdown" data-countdown="@item.DiscountExpireDate"></div>
                                                    }
                                                    
                                                </div>
                                            </div>
                                            <!--=======  End of product grid view  =======-->

                                        </div>
                                        }
                                    </div>

                                </div>

                                <!--=======  pagination area =======-->
                                <div class="pagination-area">
                                    <div class="pagination-area__left">
                                        Showing 1 to 9 of 11 (2 Pages)
                                    </div>
                                    <div class="pagination-area__right">
                                        <ul class="pagination-section">
                                            <li>
                                                <a class="active" href="#">1</a>
                                            </li>
                                            <li>
                                                <a href="#">2</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <!--=======  End of pagination area  =======-->
                                <!--=======  End of shop page content  =======-->
                            </div>
                        </div>
                    </div>
                </div>
                <!--=======  End of shop page wrapper  =======-->
            </div>
        </div>
    </div>
</div>