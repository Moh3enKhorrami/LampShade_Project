@page
@using _0_Framework.Application
@using ShopManagement.Application.Contracts
@model ServiceHost.Pages.ChechOut

@{
    ViewData["Title"] = "Check Out";
}


    <div class="breadcrumb-area section-space--half">
        <div class="container wide">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-wrapper breadcrumb-bg">
                        <div class="breadcrumb-content">
                            <h2 class="breadcrumb-content__title">Cart</h2>
                            <ul class="breadcrumb-content__page-map">
                                <li>
                                    <a asp-page="./Index">Home</a>
                                </li>
                                <li class="active">Purchase confirmation</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-content-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--=======  page wrapper  =======-->
                    <div class="page-wrapper">
                        <div class="page-content-wrapper">
                            <form action="#">
                                <div class="cart-table table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th class="pro-thumbnail">Picture</th>
                                                <th class="pro-thumbnail">Product</th>
                                                <th class="pro-title">Price</th>
                                                <th class="pro-price">Count</th>
                                                <th class="pro-quantity">Total without discount</th>
                                                <th class="pro-quantity">discount</th>
                                                <th class="pro-subtotal">Total of the discount</th>
                                                <th class="pro-remove">Total after discount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var item in Model.Cart.Items)
                                        {
                                        <tr>
                                            <td class="pro-thumbnail">
                                                <a>
                                                    <img src="~/ProductPictures/@item.Picture" class="img-fluid"
                                                         alt="@item.Name">
                                                </a>
                                            </td>
                                            <td class="pro-title">
                                                <a>@item.Name</a>
                                            </td>
                                            <td class="pro-price">
                                                <span>@item.UnitPrice €</span>
                                            </td>
                                            <td class="pro-price">
                                                <span>@item.Count</span>
                                            </td>
                                            <td class="pro-subtotal">
                                                <span>@item.TotalPrice €</span>
                                            </td>
                                            <td class="pro-subtotal">
                                                <span>@item.DiscountRate</span>
                                            </td>
                                            <td class="pro-subtotal">
                                                <span>@item.DiscountAmount €</span>
                                            </td>
                                            <td class="pro-subtotal">
                                                <span>@item.ItemPayAmount €</span>
                                            </td>
                                        </tr>
                                        }
                                        
                                        </tbody>
                                    </table>
                                </div>
                            </form>

                            <div class="row">
                                <div class="col-lg-6 col-12 d-flex">
                                    <div class="cart-summary">
                                        <div class="cart-summary-wrap">
                                            <h4>facture</h4>
                                            <p>Total Price<span>@Model.Cart.TotalAmount €</span></p>
                                            <p>The amount of discount<span>@Model.Cart.DiscountAmount €</span></p>
                                            <h2>The amount payable <span>@Model.Cart.PayAmount €</span></h2>
                                        </div>
                                        <div class="cart-summary-button">
                                            <button class="checkout-btn">Payment</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>