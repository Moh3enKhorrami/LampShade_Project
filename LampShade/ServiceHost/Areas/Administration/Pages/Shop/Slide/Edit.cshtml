@page
@model ServiceHost.Areas.Administration.Pages.Shop.Slide.EditModel

@{
    //ViewData["title"] = "Edit Slide";
}

<div class="container">
    <h3>@ViewData["title"]</h3>
    <form asp-page="./Edit" method="post" asp-page-handler="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Command.Picture">Picture</label>
            <input type="file" class="form-control" asp-for="Command.Picture" accept="image/*">
            <span asp-validation-for="Command.Picture" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Command.PictureAlt">PictureAlt</label>
            <input type="text" class="form-control" asp-for="Command.PictureAlt" rows="3">
            <span asp-validation-for="Command.PictureAlt" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Command.PictureTitle">PictureTitle</label>
            <input  type="text" class="form-control" asp-for="Command.PictureTitle">
            <span asp-validation-for="Command.Title" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Command.Heading">Heading</label>
            <input  type="text" class="form-control" asp-for="Command.Heading" >
            <span asp-validation-for="Command.Heading" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Command.Title">Title</label>
            <input type="text" class="form-control" asp-for="Command.Title" >
        </div>
        <div class="form-group">
            <label asp-for="Command.Text">Text</label>
            <input type="text" class="form-control" asp-for="Command.Text" >
        </div>
        <div class="form-group">
            <label asp-for="Command.BtnText">BtnText</label>
            <input type="text" class="form-control"  asp-for="Command.BtnText" >
            <span asp-validation-for="Command.BtnText" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Command.Link">Link</label>
            <input type="text" class="form-control"  asp-for="Command.Link" >
            <span asp-validation-for="Command.Link" class="error"></span>
        </div>

        <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id">
        
        <button type="submit" class="btn btn-success">Edit</button>
        <button type="reset" class="btn btn-danger">Reset</button>
        <a asp-page="./Index" class="btn btn-primary" >Back</a>

        
    </form>
</div>
