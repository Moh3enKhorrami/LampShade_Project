@page
@model ServiceHost.Areas.Administration.Pages.Accounts.Account.EditModel;
@{
    ViewData["Title"] = "Edit Account";
}

<div class="container">
    <h3>@ViewData["Title"]</h3>
    <form method="post" asp-page-handler="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Command.FullName">Name</label>
            <input type="text" class="form-control" asp-for="Command.FullName" >
            <span asp-validation-for="Command.FullName" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Command.UserName">User Name</label>
            <input class="form-control" asp-for="Command.UserName" rows="3">
            <span asp-validation-for="Command.UserName" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Command.Mobile">Mobile</label>
            <input class="form-control" asp-for="Command.Mobile" rows="3">
            <span asp-validation-for="Command.Mobile" class="error"></span>
        </div>
        <div class="form-group">
            <label class="sr-only" asp-for="Command.RoleId"></label>
            <select class="form-control" asp-for="Command.RoleId" asp-items="Model.Roles">
                <option value="0">Select Role</option>
            </select>
            <span asp-validation-for="Command.RoleId" class="error"></span>

        </div>
        <div class="form-group">
            <label asp-for="Command.ProfilePhoto">Picture</label>
            <input type="file" class="form-control" asp-for="Command.ProfilePhoto" accept="image/*">
        </div>

        <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id">

        <button type="submit" class="btn btn-success">Edit</button>
        <button type="reset" class="btn btn-danger">Reset</button>
        <a asp-page="./Index" class="btn btn-primary">Back</a>
    </form>
   
</div>
